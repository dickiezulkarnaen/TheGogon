<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.dickiezulkarnaen.gogoncell.pulsa">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NO HANDPHONE :"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#008cf7"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nohp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@mipmap/nohp"
        android:drawablePadding="20dp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"

        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOMINAL :"
            android:textStyle="bold"
            android:textColor="#008cf7"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"

            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:entries="@array/pulsa_layout_arrays"
            android:id="@+id/spinnernominal"
            >

        </Spinner>

    </LinearLayout>

    <TextView
        android:id="@+id/textharga"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnbeli"
        android:text="BELI"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="#008cf7"
        android:textSize="20dp"
        android:layout_margin="20dp"
        />


</LinearLayout>
