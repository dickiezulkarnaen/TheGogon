<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.dickiezulkarnaen.gogoncell.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/small"

            />


        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_logo"
            android:layout_marginTop="10dp"
            android:background="#83a1ea"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username : username / Password : 1234"
                android:gravity="center"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Username"
                android:fontFamily="monospace"
                android:id="@+id/user"
                android:drawableLeft="@mipmap/email2"
                android:inputType="textEmailAddress"
                android:textColor="#000"
                android:textColorHint="#000" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:hint="Password"
                android:fontFamily="monospace"
                android:id="@+id/pass"
                android:drawableLeft="@mipmap/pass2"
                android:inputType="textWebPassword"
                android:textColorHint="#000" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#008cf7"
                android:text="Login"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:textSize="20dp"
                android:textColor="#fff"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Forgot Password?"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>


</ScrollView>
